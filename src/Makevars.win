ifeq "$(WIN)" "64"
PKG_SIZE_T = 8
else
PKG_SIZE_T = 4
endif

PKG_CPPFLAGS = \
        -DSIZEOF_INT=4 -DSIZEOF_LONG_LONG=8 -DSIZEOF_SIZE_T=$(PKG_SIZE_T) \
	-DHAVE_LIBUDUNITS2 -DHAVE_UDUNITS2_H \
	-DHAVE_NC_RENAME_GRP \
	-DHAVE_NC_GET_VAR_CHUNK_CACHE \
	-DHAVE_NC_INQ_VAR_SZIP \
	-DHAVE_NC_INQ_VAR_ENDIAN \

PKG_LIBS = -lnetcdf4 -L$(LIB_HDF5)/lib${R_ARCH} -lhdf5_hl -lhdf5 -ludunits2 -lexpat -lz

all: clean

clean:
	rm -Rf $(SHLIB) $(OBJECTS)

.PHONY: all clean
